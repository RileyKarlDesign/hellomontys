 {% assign current_variant = product.selected_or_first_available_variant %}


   

<div class="spacer">

</div>
    

<div class="product-page-wrapper">
    <div class="product-page-info">
        <p>{{ product.title }}</p>
        <h3>{{ product.description }}</h3>

         <!-- metafields -->
    
         <div class="metafields">
    
            <div class="single-metafield ">
                <h3 class="metafield-title"> Test</h3>  <h3>{{ product.metafields.custom.test | metafield_tag }}</h3>
            </div>
   
            <div class="single-metafield  ">
                <h3 class="metafield-title" > Color</h3>  <h3>{{ product.metafields.custom.colour | metafield_text }}</h3>
            </div>
   
            <div class="single-metafield ">
                <h3 class="metafield-title" > Material </h3> <h3>{{ product.metafields.custom.material | metafield_text }}</h3>
            </div>
   
        </div>

        <!-- //---------------------------------------------------------------- -->
    
        
        
            {% render 'add-to-cart-form' with current_variant: current_variant  %}
        

    </div>
    
     <!--  Images  -->
     <div class="product-page-images">
        {% for image in product.images %}
            <img src="{{ image.src | product_img_url: 'large' }}"" width='500' height='auto'}>
        {% endfor %}
    </div>
</div>


