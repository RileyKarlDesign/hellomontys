{% if product.available %}  


     

<div class="product-card">


    {% if product.vendor != "hellomonty's" %}

    <div class="makers-mark"></div>

    {% endif %}
    


    <div class="product-img">
            <a href="{{ product.url }}">
            <img src="{{ product.featured_image.src | img_url: 'master' }}" loading = 'lazy' width="auto" height="auto" alt="">
        </a>
    </div>





    <div class="product-info">
        
        <div class="info-section-one">

            <div class='product-title cell' > 
            <p class="label title-label">Title:</p>
            <p> {{ product.title }} </p>
            
            {% if product.vendor != "hellomonty's" %}

            <div class='product-vendor cell' > 
            <p class="label">Maker:</p>
            <p> {{ product.vendor }} </p>
            </div>


        {% endif %}
        
        
        
        
            </div>
            
            <div class="info">
                
                <div class='product-price cell' >
                    <p class="label">Price:</p>
                    <p> {{ product.price | money_with_currency}} </p>
                    </div>


                <!-- {% for option in product.options_with_values %}
                    {% if option.name != 'Title' %}
                    <div class="product-option cell">
                            <p class="product-option-label label" > {{ option.name }}: </p>
                                {% for value in option.values %}
                                    <p class="product-option">  {{ value }}</p>
                                {% endfor %}
                    </div>
                    {% endif %}
                           {% endfor %}
                     -->
               
            </div>


            
        

        </div>


       

        <div class="info-section-two">
            <form class="mini-add-to-cart" method="post" action="/cart/add">

                {% if product.available %}
        
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                    
                    <button class='btn'> <i class="fa-solid fa-plus"></i> </button>

                    {% else %}

                    <p class='sold-out-text' > sold out </p>
                    
                {% endif %}
        
        </form>

        </div>

    </div>




   

    
</div>

{% endif %}
    

    



