<!-- collection  -->

<div class="header ">
<div class="header-top">

    {% if page.title == "Makers"  %}
            <div class="header-makers-mark animate__animated animate__slideInRight">

            </div> 

        {% elsif product.vendor && product.vendor != "hellomonty's" %}

            <div class="header-makers-mark animate__animated animate__slideInRight">

        </div> 

        {% elsif collection.title == "hand-made" %}

            <div class="header-makers-mark animate__animated animate__slideInRight">

        </div> 
        
    {% endif %}

    <div class="version-mark">

    </div>
        
    

    
       
    <img class="logo" src=" {{ 'logo.svg' | asset_url }} " loading="lazy"  width="{{ image.width }}"height="{{ image.height }}" alt=""> 

    </div>
    
    
  


    <div class="header-bottom">
        

        <div class="cart-button">
            <a href="/cart">

                <h2>Cart (
                <span data-ajax-cart-bind-state="cart.item_count" > 
                    
                     {{ cart.item_count }} 
                </span>
                 )</h2>
                

            </a>
        </div>

           
        

        <div class="collection-link-list">

            

                    
                {% for collection in collections %}

                {% if template.name == 'index' and collection.title  == 'All' %}
                    
                <a href="{{ collection.url }}"> <h2 class="link-btn link-btn-active">{{ collection.title }} </h2></a>
                

               
                    
                {% elsif  collection.url  ==  request.path %}
                    
                        <a href="{{ collection.url }}"> <h2 class="link-btn link-btn-active">{{ collection.title }} </h2></a>

                   {% else %}

                        <a href="{{ collection.url }}"> <h2 class="link-btn">{{ collection.title }} </h2></a> 
                    
    

                    {% endif %}


                    

                
                 {% endfor %}

        </div>


        

     

        
        
        
        <div class="head-link-list">
        {% for link in linklists.main-menu.links %}
        <a class="link-btn" {% if link.active %} class="link-btn-active" {% endif %} href="{{ link.url }}"><h2>{{ link.title }}</h2></a>
        {% endfor %}
        </div>
    </div>

</div>

